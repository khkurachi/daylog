<div class="today-main">
  <h2 class="today-title">今日の日記</h2>
  <%= form_with model: @day, url:days_path, local: true do |f| %>
    <%= render 'devise/shared/error_messages', resource: @day %>
    
    <div class="form">
      <div class="text-content">今日やりたい事 必須</div>
        <%= f.text_area :want_do, class:"items-text" %>
        
      <div class="text-content">今日やるべき事 必須</div>
        <%= f.text_area :must_do, class:"items-text" %>
        
      <div class="text-content">今日やらない事 必須</div>
        <%= f.text_area :do_not, class:"items-text" %>
        
      <div class="weight-bold-text">アイデア 必須</div>
        <%= f.text_area :idea, class:"items-text" %>
    </div>

    <%# 注意書き %>
    <div class="danger_note">
      <%= "この日記は削除、編集ができないのでご注意ください"%>
    </div>
    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "投稿する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
  <% end %>    
</div>