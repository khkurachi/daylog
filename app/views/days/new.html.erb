<div class="items-sell-contents">
  <header class="items-sell-header">
  </header>
  <div class="items-sell-main">
    <h2 class="items-sell-title">今日の日記</h2>
    <%= form_with model: @day, url:days_path, local: true do |f| %>
    <%= render 'devise/shared/error_messages', resource: @day %>
    
    <div class="new-items">
      <div class="form">
        <div class="weight-bold-text">
          今日やりたい事
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :want_do, class:"items-text", id:"item-scheduled-delivery" %>
        
        <div class="weight-bold-text">
          今日やるべき事
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :must_do, class:"items-text", id:"item-scheduled-delivery" %>
        
        <div class="weight-bold-text">
          今日やらない事
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :do_not, class:"items-text", id:"item-scheduled-delivery" %>
        
        <div class="weight-bold-text">
          今興味がある事、思いついた事
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :idea, class:"items-text", id:"item-scheduled-delivery" %>
      </div>
    </div>

    <%# 注意書き %>
    <div class="danger_note">
      <%= "この日記は削除、編集ができないのでご注意ください"%>
    </div>
    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "投稿する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
 
  </div>
  <% end %>
    
</div>