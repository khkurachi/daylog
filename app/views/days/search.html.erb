<%= form_with(url: search_days_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :impression, placeholder: "投稿を検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>

<div class="contents row">
  <% @days.each do |day| %>
    <%= render partial: "day", locals: { day: day } %>
  <% end %>
</div>